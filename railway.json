{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run start:prod"
  },
  "services": {
    "backend": {
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build"
      },
      "deploy": {
        "startCommand": "npm run start:prod"
      },
      "source": {
        "path": "backend"
      }
    },
    "frontend": {
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build"
      },
      "deploy": {
        "startCommand": "npx serve dist -s -p $PORT"
      },
      "source": {
        "path": "frontend"
      }
    }
  }
}
